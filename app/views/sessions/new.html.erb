<h1>Login</h1>

<%= form_tag ({controller: 'sessions', action: 'create', method: 'post'}) do %>
  <label>Name: </label>
  <input name="user[name]" type="text" id="name">
  <label>Password: </label>
  <input name="user[password]" type="password" id="password">
  <input type="submit" value='login'>
<% end %>